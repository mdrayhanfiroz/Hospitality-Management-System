<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    @RenderSection("head", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-primary">
        <div class="container-fluid">
            <a href="#" class="navbar-brand">TravelWorld</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Spot", "Index", "Spots", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Client", "Index", "Clients", new { }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="container-fluid">
        <p class="text-center">&copy; @DateTime.Now  www.travelworld.com</p>
    </footer>

    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/bootstrap.bundle.js"></script>

    <script type="text/javascript">
        $("#btnPlus").click(function (e) {
            e.preventDefault();
            var spotContainer = $("#spotContainer");
            $.ajax({
                url: "/Clients/AddNewSpot",
                type: "GET",
                success: function (data) {
                    spotContainer.append(data)
                }
            });
        });

        $(document).on("click", "#btnDeleteSpot", function (e) {
            e.preventDefault();
            $(this).parent().parent().remove();
        })
    </script>
</body>
</html>
